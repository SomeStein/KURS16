j = 0;  //z√§hlt nichtleere zeilen
For i = 1 to %elem(textArray);
   line = %trim(textArray(i));
   If line <> '';
      first = %subst(line:1:1);
      first = %upper(first);
      line = first + %subst(line:2);
      textArray(i) = '';
      j += 1;
      textArray(j) = line;
      dsply line;
   EndIf;
EndFor;

*inLR = *on;
